include ./components/header.pug
    h3 Welcome to Calorie Watcher

    p#user #{email}
        br
        <a href="/logout">Logout</a>

    .layer_3
        strong
        |                     Enter your weight and height.
        br
        br
        .layer_4
            span You are a 
            strong #{gender}
            br
            span Your starting date: 
            strong #{startDate}
            br
            span Your initial Weight: 
            strong #{initialWeight}
            br
            span Your initial Height: 
            strong #{initialHeight}
            br
            span Your initial BMI: 
            strong #{initialBMI}
            br
            br
            br
            form(method="POST" action="/home/logweight")
                label(for='weight') My current weight is:
                input#weight(type='number' name='weight' value=initialWeight min='1' max='500' step=0.5 )
                |  Lbs
                br
                br
                label(for='height') My current Height is:
                input#height(type='number' name='height' value=initialHeight min='1' max='500')
                |  Inches
                br
                br
                button(type='submit') SUBMIT
                br
            p
            center
                span(style='color: #000080;')
                  | Click DETAILS to get your weight tracking details.
                  br
                  | Click RESET to restart weight tracking.
    button#next(onclick="window.location.href='/home/details';" type='button') DETAILS
    button#back(onclick="confirmReset()" type='button') RESET
    br
    include ./components/footer.pug
